{
  "name": "node-module-map",
  "displayName": "Node Module Map",
  "description": "Interactive visualization of npm dependency trees with multi-repo support, conflict detection, and security insights",
  "version": "0.5.0",
  "publisher": "marcozingoni",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcozingoni/node-module-map.git"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other",
    "Visualization",
    "Dependency Management"
  ],
  "keywords": [
    "npm",
    "dependencies",
    "graph",
    "visualization",
    "package.json",
    "monorepo",
    "security"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "node-module-map.showDependencyGraph",
        "title": "Node Module Map: Show Dependency Graph",
        "category": "Node Module Map",
        "icon": "icon.png"
      },
      {
        "command": "node-module-map.analyzeDependencies",
        "title": "Node Module Map: Analyze Dependencies",
        "category": "Node Module Map",
        "icon": "icon.png"
      }
    ],
    "views": {
      "nodeModuleMap": [
        {
          "type": "webview",
          "id": "node-module-map.dependencyGraph",
          "name": "Dependency Graph"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "nodeModuleMap",
          "title": "Node Module Map",
          "icon": "icon.png"
        }
      ]
    },
          "menus": {
        "commandPalette": [
          {
            "command": "node-module-map.showDependencyGraph"
          },
          {
            "command": "node-module-map.analyzeDependencies"
          }
        ],
        "view/title": [
          {
            "command": "node-module-map.showDependencyGraph",
            "when": "view == node-module-map.dependencyGraph",
            "group": "navigation"
          }
        ]
      }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && tsc -p ./tsconfig.webview.json",
    "watch": "tsc -watch -p ./ & tsc -watch -p ./tsconfig.webview.json",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "build": "npm run compile",
    "dev": "npm run watch",
    "compile:webview": "tsc -p ./tsconfig.webview.json",
    "compile:extension": "tsc -p ./",
    "package": "npx @vscode/vsce package",
    "install-extension": "npx @vscode/vsce install"
  },
  "devDependencies": {
    "@types/d3": "^7.4.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "d3": "^7.8.5"
  },
  "author": "Marco Zingoni",
  "license": "MIT",
  "types": "./out/extension.d.ts"
}
